{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2021",
		"sourceMap": true,
		"outDir": "./dist",
		"incremental": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules", "dist"]
}
